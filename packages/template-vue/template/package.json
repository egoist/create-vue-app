{
  "private": true,
  "name": "<%= name %>",
  "productName": "<%= name %>",
  "description": "<%= description %>",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "poi",
    "build": "poi build",
    "report": "poi build --bundle-report",
    "serve": "serve dist --single"<% if (test === 'karma') { %>,
    "test": "poi test"<% } else if (test === 'ava') { %>,
    "test": "cross-env NODE_ENV=test ava"<% } %>
  },
  "babel": {
    "presets": [
      "poi"
    ]
  },
  "author": {
    "name": "<%= username %>",
    "email": "<%= email %>"
  }<% if (test === 'ava') { %>,
	"ava": {
    "babel": "inherit",
    "require": [
      "./test/helpers/setup.js"
    ]
  }<% } %>,
  "dependencies": {<% if (pwa) { %>
    "offline-plugin": "^4.8.0",<% } %>
    "normalize.css": "^7.0.0",
    "object-assign": "^4.1.1",
    "promise-polyfill": "^6.0.2"
  },
  "devDependencies": {
    "poi": "^9.0.0",
    "poi-preset-bundle-report": "^2.0.0",
    "serve": "^6.1.0"<% if (test === 'karma') { %>,
    "poi-preset-karma": "^9.0.0"<% } else if (test === 'ava') { %>,
    "ava": "^0.19.1",
    "cross-env": "^5.0.0",
    "browser-env": "^2.0.31",
    "require-extension-hooks": "^0.2.0",
    "require-extension-hooks-vue": "^0.3.1",
    "require-extension-hooks-babel": "^0.1.1"<% } %><% if (pwa) { %>,
    "poi-preset-offline": "^9.0.0"<% } %>
  }
}
